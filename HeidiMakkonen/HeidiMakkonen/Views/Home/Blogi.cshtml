
@{
    ViewData["Title"] = "Blogi";
}

<h2>Blogi</h2>

@{
    string[] tiedostoNimet = System.IO.Directory.GetFiles("Blogi", "*.html");

    foreach (string nimi in tiedostoNimet)
    {
        string sisältö = System.IO.File.ReadAllText(nimi);

        <p>&nbsp;</p>
        <hr />
        <p>&nbsp;</p>
        <div>@Html.Raw(sisältö)</div>
    }
}
